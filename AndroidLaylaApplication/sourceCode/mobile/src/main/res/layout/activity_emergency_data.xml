<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_margin="0dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:textStyle="italic"
            android:theme="@style/MyActionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/my_toolbar">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#3cb97a"
                android:gravity="center"
                android:text="Supervisor contact"
                android:textColor="#e8e9e9"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextContact"
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:background="#3cb97a"
                android:ems="10"
                android:gravity="top"
                android:hint="Type phone number of your supervisor.."
                android:inputType="phone"
                android:textColor="#e8e9e9"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#259282"
                android:gravity="center"
                android:text="Address"
                android:textColor="#e8e9e9"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextAddress"
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:background="#259282"
                android:ems="10"
                android:gravity="top"
                android:hint="Type your address.."
                android:inputType="textPersonName"
                android:textColor="#e8e9e9"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#37b7ae"
                android:gravity="center"
                android:text="Medicines"
                android:textColor="#e8e9e9"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextMedicines"
                android:layout_width="match_parent"
                android:layout_height="145dp"
                android:background="#37b7ae"
                android:ems="10"
                android:gravity="top"
                android:hint="Type your medicines.."
                android:inputType="textPersonName"
                android:textAllCaps="false"
                android:textColor="#e8e9e9"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#3395ff"
                android:gravity="center"
                android:text="Additional information"
                android:textColor="#e8e9e9"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextInfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#3395ff"
                android:ems="10"
                android:gravity="top"
                android:hint="Type some additional info.."
                android:inputType="textPersonName"
                android:textColor="#e8e9e9" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>